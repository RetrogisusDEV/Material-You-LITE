<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android" android:color="#66ffffff">
	<item>
		<shape android:shape="rectangle">
			<corners android:radius="10.0dip" />
			<solid android:color="@color/semitransparent" />
			<stroke android:width="4dp" android:color="@color/colorAccent"/>
		</shape>
	</item>
	<item>
		<selector android:enterFadeDuration="@android:integer/config_longAnimTime" android:exitFadeDuration="@android:integer/config_longAnimTime">
			<item android:state_pressed="true">
				<shape android:shape="rectangle">
					<corners android:radius="10.0dip" />
					<solid android:color="@color/colorAccent" />
				</shape>
			</item>
		</selector>
	</item>
</ripple>


